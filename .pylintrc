[MASTER]
ignore=venv
jobs=1
load-plugins=pylint_django
django-settings-module="pay_stripe_system.settings"
persistent=yes

[MESSAGES CONTROL]
disable =
    missing-docstring,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    unknown-option-value,
    import-outside-toplevel,

[FORMAT]
max-line-length=120

[DESIGN]
max-args=5
max-locals=15

[REPORTS]
output-format = colorized
